# =========================
# Database (app connection)
# =========================
DB_HOST=gamecubby-db
DB_PORT=5432
DB_NAME=gamecubby
DB_USER=gamecubby
DB_PASSWORD=gamecubby

# ======================================
# Maintenance role (separate admin user)
# ======================================
# Create once (run as a superuser):
#   CREATE ROLE gc_maint WITH LOGIN PASSWORD 'change-me-strong' SUPERUSER;
MAINT_DB_USER=gc_maint
MAINT_DB_PASSWORD=change-me-strong

# =======================================
# Maintenance/Backups paths (inside pods)
# =======================================
# These paths exist inside the containers and are bind-mounted from the host
# via docker-compose (./storage:/storage).
GC_MAINT_FILE=/storage/maintenance.json
GC_BACKUPS_DIR=/storage/backups

# ======================
# Auto-backup scheduling
# ======================
# (Hooked up when we add the scheduler; safe to set now.)
AUTOBACKUPS=no
BACKUP_RETENTION_DAYS=14
BACKUP_TIME=03:00

# =======================
# Web app public settings
# =======================
NEXT_PUBLIC_API_BASE_URL=http://gamecubby-api:8000

# ===================
# Node/Next.js basics
# ===================
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
HOSTNAME=0.0.0.0
PORT=3000
